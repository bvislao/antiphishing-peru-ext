{
  "manifest_version": 3,
  "name": "Anti-Phishing Perú",
  "version": "0.9.7",
  "description": "Alerta sobre posibles páginas de phishing y protege tus datos (Perú y global).",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Anti-Phishing PE"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "homepage_url": "https://github.com/bvislao/antiphishing-peru-ext",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["whitelist.js", "content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}