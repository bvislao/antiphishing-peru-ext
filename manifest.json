{
  "manifest_version": 3,
  "homepage_url": "https://github.com/bvislao/antiphishing-peru-ext",
  "author": "bvislao (https://bvislao.me)",
  "name": "Anti-Phishing Perú (Bancos & Financieras)",
  "description": "Detecta phishing de banca/financieras del Perú y alerta con banner y sonido.",
  "version": "1.0.0",
  "permissions": ["storage", "tabs", "webNavigation", "activeTab", "scripting", "notifications"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Anti-Phishing PE",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}